<Application x:Class="CodingKata2Go.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:CodingKata2Go"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="using:CodingKata2Go.ViewModel"
             RequestedTheme="Light"
             mc:Ignorable="d">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="Accent1Brush" Color="#ffE08A12" />
            <SolidColorBrush x:Key="Accent2Brush" Color="#ffD6BB6B" />
            <SolidColorBrush x:Key="Accent3Brush" Color="#ffBF4A0F" />
            <SolidColorBrush x:Key="Accent4Brush" Color="#ff4E360F" />
            <SolidColorBrush x:Key="Accent5Brush" Color="#ff948676" />
            
            <x:String x:Key="AppName">CodingKata2Go</x:String>
            <local:Bootstrapper x:Key="Bootstrapper" />
            <viewModel:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
